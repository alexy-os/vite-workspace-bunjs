{
  "name": "vite-workspace-bunjs",
  "description": "Vite Workspace BunJS",
  "version": "0.0.2",
  "private": true,
  "license": "MIT",
  "author": "AlexY-OS",
  "homepage": "https://github.com/alexy-os/vite-workspace-bunjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexy-os/vite-workspace-bunjs.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
